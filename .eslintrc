{
    "ignorePatterns": [
        "gulpfile.js"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "camelcase": 1,
        "comma-dangle": 2,
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ]
    }
}